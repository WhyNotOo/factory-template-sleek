{
  "name": "sleek",
  "fullName": "Sleek",
  "version": "0.0.4",
  "description": "Generic-purpose nicely polished template that supports photos, videos, events, RSS feeds, status updates, contact info, and a map. The views are adapted automatically based on the datasources that you set in the configuration settings. Just make sure that you use the most appropriate datasouce type for the underlying template inputs!\n\nThe template is available in 5 different colors: blue, spicy, gray, earth and vegetal.",
  "keywords": [
    "generic",
    "polished",
    "smooth"
  ],
  "joshfire": {
    "images": {
      "small": "marketing/sleek-small.png",
      "big": "marketing/sleek-big.png"
    },
    "premium": true,
    "price": {
      "eur": 899,
      "usd": 1199
    },
    "datasources": {
      "photos": {
        "title": "Photos",
        "description": "e.g. a Flickr feed"
      },
      "videos": {
        "title": "Videos",
        "description": "e.g. a Youtube feed"
      },
      "events": {
        "title": "Events",
        "description": "e.g. a Google Calendar feed"
      },
      "news": {
        "title": "News",
        "description": "e.g. an RSS feed"
      },
      "statuses": {
        "title": "Statuses",
        "description": "e.g. a Twitter feed"
      }
    },
    "devices": [
      {
        "devices": "phone",
        "startfile": "app/index.phone.optimized.html",
        "price": {
          "eur": 499,
          "usd": 669
        }
      },
      {
        "devices": "tv",
        "startfile": "app/index.tv.optimized.html",
        "price": {
          "eur": 399,
          "usd": 669
        }
      }
    ],
    "options": {
      "schema": {
        "color": {
          "title": "Color",
          "type": "string",
          "enum": [
            "blue",
            "spicy",
            "gray",
            "earth",
            "vegetal"
           ]
        },
        "contacthtml": {
          "title": "Contact HTML",
          "type": "string"
        },
        "address": {
          "title": "Address",
          "type": "string"
        },
        "latitude": {
          "title": "Latitude (for map)",
          "type": "string"
        },
        "longitude": {
          "title": "Longitude (for map)",
          "type": "string"
        },
        "backgroundurl": {
          "title": "Background URL (for TV version)",
          "type": "string"
        }
      },
      "form": [
        "color",
        "datasources.photos",
        "datasources.videos",
        "datasources.events",
        "datasources.news",
        "datasources.statuses",
        {
          "key": "contacthtml",
          "type": "textarea"
        },
        {
          "key": "address",
          "type": "textarea"
        },
        "latitude",
        "longitude",
        "backgroundurl"
      ]
    }
  }
}
