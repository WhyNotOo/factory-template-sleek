{
  "name": "spot",
  "fullName": "Spot",
  "version": "0.0.1",
  "description": "The ideal template to promote a location. Supports photos, videos, events, RSS feeds, status updates, contact info, and a map. Available in 5 different colors.",
  "joshfire": {
    "devOnly": true,
    "images": {
      "small": "marketing/spot_marketing.png",
      "big": "marketing/spot_marketing_big.png"
    },
    "datasources": {
      "photos": {
        "title": "Photos",
        "description": "Add photos to your application, such as a Flickr feed"
      },
      "videos": {
        "title": "Videos",
        "description": "Add videos to your application, such as a Youtube feed"
      },
      "events": {
        "title": "Events",
        "description": "Add events to your application, such as a Google Calendar feed"
      },
      "news": {
        "title": "News",
        "description": "Add news articles to your application, such as an RSS feed"
      },
      "statuses": {
        "title": "Statuses",
        "description": "Add statuses to your application, such as a Twitter feed"
      }
    },
    "devices": [
      {
        "devices": "phone",
        "startfile": "app/index.phone.html",
        "images": "marketing/spot_marketing_mobile1.png",
        "screenshots": [
          "marketing/spot_marketing_mobile_ss1.png",
          "marketing/spot_marketing_mobile_ss2.png"
        ]
      },
      {
        "devices": "tv",
        "startfile": "app/index.tv.html",
        "images": "marketing/spot_marketing_TV1.png",
        "screenshots": [
          "marketing/spot_marketing_TV_ss1.png",
          "marketing/spot_marketing_TV_ss2.png"
        ]
      }
    ],
    "options": {
      "schema": {
        "color": {
          "title": "Color",
          "type": "string",
          "enum": [
            "blue",
            "spicy",
            "gray",
            "earth",
            "vegetal"
           ]
        },
        "contacthtml": {
          "title": "Contact HTML (link to #map to display map)",
          "type": "string"
        },
        "address": {
          "title": "Address",
          "type": "string"
        },
        "latitude": {
          "title": "Latitude (for map)",
          "type": "string"
        },
        "longitude": {
          "title": "Longitude (for map)",
          "type": "string"
        },
        "logourl": {
          "title": "Logo URL (for TV version)",
          "type": "string"
        },
        "backgroundurl": {
          "title": "Background URL (for TV version)",
          "type": "string"
        }
      },
      "form": [
        "color",
        "datasources.photos",
        "datasources.videos",
        "datasources.events",
        "datasources.news",
        "datasources.statuses",
        {
          "key": "contacthtml",
          "type": "textarea"
        },
        {
          "key": "address",
          "type": "textarea"
        },
        "latitude",
        "longitude",
        "logourl",
        "backgroundurl"
      ]
    }
  }
}